<h1>Applications for <%= @job.title %></h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Applicant Name</th>
      <th>Job Title</th>
      <th>Experience</th>
      <th>Application Status</th>
      <th>View Application</th>
    </tr>
  </thead>
  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td><%= job_application.job_seeker.user.name %></td>
        <td><%= @job.title %></td>
        <td><%= job_application.total_experience %></td>
        <td>
            <span class="badge <%= job_application.status == 'pending' ? 'bg-warning' : job_application.status == 'accepted' ? 'bg-success' : 'bg-danger' %>">
              <%= job_application.status.humanize %>
            </span>
          </td>
        <td>
          <%= link_to 'View Application', view_application_company_job_path(@job, application_id: job_application.id), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
