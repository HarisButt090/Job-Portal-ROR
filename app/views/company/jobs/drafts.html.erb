<h1>Draft Jobs</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>Job Type</th>
      <th>Salary</th>
      <th>View Job</th>
    </tr>
  </thead>
  <tbody>
    <% @draft_jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.city %></td>
        <td><%= job.job_type.capitalize %></td>
        <td><%= number_to_currency(job.salary, unit: 'PKR ') %></td>
        <td>
          <%= link_to 'View Job', company_job_path(job), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 