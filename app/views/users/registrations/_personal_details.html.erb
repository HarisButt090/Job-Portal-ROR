<div class="form-group">
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name, required: true, aria_required: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :email, 'Email' %>
  <%= f.email_field :email, required: true, aria_required: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password, required: true, aria_required: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation, required: true, aria_required: true, class: 'form-control' %>
</div>
