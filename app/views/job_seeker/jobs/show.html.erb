<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-body">
      <h1 class="card-title text-center"><%= @job.title %></h1>
      <hr>
      <p><strong>Location:</strong> <%= @job.city %></p>
      <p><strong>Address:</strong> <%= @job.address %></p>
      <p><strong>Description:</strong> <%= @job.job_description %></p>
      <p><strong>Requirements:</strong> <%= @job.requirements %></p>
      <p><strong>Responsibilities:</strong> <%= @job.responsibilities %></p>
      <p><strong>Salary:</strong> <%= @job.salary %></p>
      <p><strong>Experience Required:</strong> <%= @job.experience %> years</p>
      <p><strong>Qualification:</strong> <%= @job.qualification %></p>
      <div class="text-center mt-4">
        <%= link_to 'Back to Dashboard', job_seeker_dashboard_path, class: 'btn btn-primary mr-2' %>
        <%= link_to 'Apply for Job', apply_job_seeker_job_path(@job), class: 'btn btn-primary' %>

      </div>
    </div>
  </div>
</div>
