<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
             html: { method: :post, class: "form-container" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, "Full Name", class: "form-label" %>
    <%= f.text_field :name, required: true, class: "form-control", placeholder: "Enter your full name" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email", class: "form-label" %>
    <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password", class: "form-label" %>
    <%= f.password_field :password, required: true, class: "form-control", placeholder: "Enter a password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm your password" %>
  </div>

  <div class="form-group">
    <%= f.label :role, "Choose your Role", class: "form-label" %>
    <%= f.select :role, options_for_select([["Select Role", nil], ["Company Admin", "company_admin"]], f.object.role),
                 prompt: "Select Role",
                 required: true,
                 class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
