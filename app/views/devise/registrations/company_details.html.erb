<%= form_with model: @company, url: save_company_details_path(user_id: @user.id), method: :post, local: true do |f| %>
  <%= hidden_field_tag :user_id, @user.id %>

  <div class="mb-3">
    <%= f.label :name, "Company Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :industry, "Industry", class: "form-label" %>
    <%= f.text_field :industry, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :employee_size, "Employee Size", class: "form-label" %>
    <%= f.text_field :employee_size, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :address, "Address", class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Save Details", class: "btn btn-primary" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger mt-3">
    <%= flash[:alert] %>
  </div>
<% end %>
