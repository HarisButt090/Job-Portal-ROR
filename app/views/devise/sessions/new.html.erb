<h1 class="text-center my-4">Job Portal</h1>
<p class="text-center mb-5">Indeed! You will find a job here.</p>

<h2 class="text-center mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <% if flash[:alert].present? %>
              <div class="alert alert-danger" role="alert">
                <% if flash[:alert].include?("Invalid Email or password") %>
                  <%# Customize messages based on flash[:alert] %>
                  <% if resource.errors[:email].any? %>
                    Email does not exist.
                  <% elsif resource.errors[:password].any? %>
                    Incorrect password.
                  <% else %>
                    Invalid email or password.
                  <% end %>
                <% else %>
                  <%= flash[:alert] %>
                <% end %>
              </div>
            <% end %>

            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>

            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3" %>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
